@using RapidResuce.Enums
@model RapidResuce.Models.User

@{
    ViewData["Title"] = "Profile";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
    var role = UserRole.Patient;
    var userId = Session.UserId;
}

<style>
    /*     .gradient-custom {
                    background: #2a2f5b;
                    background: -webkit-linear-gradient(to bottom right, rgba(42, 47, 91, 1), rgba(0, 123, 255, 1));
                    background: linear-gradient(to bottom right, rgba(42, 47, 91, 1), rgba(0, 123, 255, 1));
                } */



    .card-registration .select-input.form-control[readonly]:not([disabled]) {
        font-size: 1rem;
        line-height: 2.15;
        padding-left: .75em;
        padding-right: .75em;
    }

    .card-registration .select-arrow {
        top: 13px;
    }
</style>
<!-- start page title section -->
<section class="page-title-section bg-img cover-background" data-overlay-dark="75" data-background="/user/img/banner/page-title.jpg">
    <div class="container">

        <div class="row">
            <div class="col-md-12">
                &nbsp;
                <h1>Registeration</h1>
            </div>
            <div class="col-md-12">
                <ul>
                    <li><a asp-action="Index" asp-controller="Home">Home</a></li>
                    <li><a href="javascript:void(0)">Contact us</a></li>
                </ul>
            </div>
        </div>

    </div>
</section>
<!-- end page title section -->
<div class="gradient-custom">
    <div class="container py-5 h-100">
        <div class="row justify-content-center align-items-center h-100">
            <div class="col-12 col-lg-12 col-xl-12">
                <div class="card shadow-2-strong card-registration" style="border-radius: 15px;">
                    <div class="card-body p-4 p-md-5">
                        <h3 class="mb-4 pb-2 pb-md-0 mb-md-5 w-100 text-center">My Profile</h3>
                        <form id="frmUser" enctype="multipart/form-data">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="row">
                                <div class="col-4 p-2">
                                    <div class="form-group">
                                        <div class="custom-file-button d-none align-items-center">
                                            <label for="image" class="mb-0 fw-bold text-center" style="cursor: pointer; width: 100%;">Click here to Uplaod Image...</label>
                                            <input id="image" accept="image/*" name="image" type="file" class="d-none">
                                        </div>

                                        <div class="mt-3 text-center" style="height:50px;">
                                            <img id="imagePreview" src="#" style="height:350px !important;" alt="Image Preview" style="max-width: 200px; display: none;" class="img-thumbnail" />
                                        </div>

                                        <div class="text-center mt-2">
                                            <button type="button" id="clearImage" class="btn btn-sm btn-danger" style="display: none;">Clear Image</button>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-8 p-2">



                                    <div class="row">
                                        <div class="col-md-6 mb-4">

                                            <div data-mdb-input-init class="form-outline">
                                                <label class="form-label" for="firstName" asp-for="FirstName"></label>
                                                <input type="text" asp-for="FirstName" id="firstName" readonly class="form-control form-control-lg" />
                                                <span asp-validation-for="FirstName" class="text-danger small"></span>
                                            </div>

                                        </div>
                                        <div class="col-md-6 mb-4">

                                            <div data-mdb-input-init class="form-outline">
                                                <label class="form-label" asp-for="LastName" for="lastName">Last Name</label>
                                                <input type="text" asp-for="LastName" id="lastName" readonly class="form-control form-control-lg" />
                                                <span asp-validation-for="LastName" class="text-danger small"></span>
                                            </div>

                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-6 mb-4">

                                            <div data-mdb-input-init class="form-outline">
                                                <label class="form-label" asp-for="Phone" for="phone"></label>
                                                <input type="text" asp-for="Phone" id="phone" readonly class="form-control form-control-lg" />
                                                <span asp-validation-for="Phone" class="text-danger small"></span>
                                            </div>

                                        </div>
                                        <div class="col-md-6 mb-4">

                                            <div data-mdb-input-init class="form-outline">
                                                <label class="form-label" asp-for="Email" for="email"></label>
                                                <input type="text" asp-for="Email" id="email" readonly class="form-control form-control-lg" />
                                                <span asp-validation-for="Email" class="text-danger small"></span>
                                            </div>

                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-12 mb-4">

                                            <div data-mdb-input-init class="form-outline">
                                                <label class="form-label" for="address" asp-for="Address"></label>
                                                <input type="text" asp-for="Address" id="address" readonly class="form-control form-control-lg" />
                                                <span asp-validation-for="Address" class="text-danger small"></span>
                                            </div>

                                        </div>
                                        <div class="col-md-6 mb-4 d-none">

                                            <div data-mdb-input-init class="form-outline">
                                                <label class="form-label" asp-for="Role"></label>
                                                <input type="text" asp-for="Role" id="role" value="@role" readonly class="form-control form-control-lg" />
                                                <span asp-validation-for="Role" class="text-danger small"></span>
                                            </div>

                                        </div>
                                    </div>

                                    <div class="row" style="display:none;" id="passwordDiv">
                                        <div class="col-md-6 mb-4">

                                            <div data-mdb-input-init class="form-outline">
                                                <label class="form-label" asp-for="Password"></label>
                                                <input type="password" asp-for="Password" id="password" class="form-control form-control-lg" />
                                                <span asp-validation-for="Password" class="text-danger small"></span>
                                            </div>

                                        </div>
                                        <div class="col-md-6 mb-4">

                                            <div data-mdb-input-init class="form-outline">
                                                <label class="form-label" asp-for="ConfirmPassword"></label>
                                                <input type="password" asp-for="ConfirmPassword" id="confirmPassowrd" class="form-control form-control-lg" />
                                                <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                                            </div>

                                        </div>
                                    </div>

                                    <div class="mt-4 pt-2" id="updateBtn">
                                        <input data-mdb-ripple-init class="btn btn-primary btn-lg" style="background-color:#2a2f5b;" type="button" onclick="showPassword()" value="Update Password" />
                                    </div>
                                    <div class="mt-4 pt-2" style="display:none;" id="submitBtn">
                                        <input data-mdb-ripple-init class="btn btn-primary btn-lg" style="background-color:#2a2f5b;" type="button" onclick="user.save()" value="Submit" />
                                    </div>
                                </div>
                            </div>


                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts {
    <script>

        function showPassword() {
            $('#updateBtn').hide();
            $('#submitBtn').show();
            $('#passwordDiv').show();
        }

        $(function () {
            user.populate(@userId);
        });

    </script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}